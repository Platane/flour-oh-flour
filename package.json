{
  "name": "js13k2020",
  "description": "js13k 2020 entry",
  "repository": "github:platane/js13k2020",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "14"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "26.0.10",
    "html-minifier-terser": "5.1.1",
    "jest": "26.4.2",
    "microbundle": "0.12.3",
    "prettier": "2.1.0",
    "surge": "0.21.6",
    "ts-jest": "26.2.0",
    "typescript": "4.0.2"
  },
  "source": "src/index.ts",
  "mangle": {
    "regex": "^_"
  },
  "scripts": {
    "build:js": "microbundle --compress --no-sourcemap --input src/index.js --output dist/bundle.js --no-pkg-main --format modern",
    "build": "rm -rf dist ; npm run build:js && node ./scripts/buildHtml.js && rm -rf dist/*.ts dist/*.js && ( cd dist ; advzip -4 -a ./bundle.zip ./* )",
    "dev": "echo \" visit file://$( pwd )/src/index.html\" ; npm run build:js -- --watch",
    "test": "jest --config ./jest.config.js --no-cache --passWithNoTests",
    "type": "tsc --noEmit",
    "lint": "yarn prettier -c '**/*.{ts,tsx,js,jsx,json,md}' '!**/dist/**'"
  }
}
